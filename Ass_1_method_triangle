using System;

namespace Triangle
{
  class Program
  {
    static void MethodPattern(int pattern)	//declare parameter (int) for variable (pattern)
    {
      for (int i = 0; i <= pattern; i++)  		
         {  
            for (int j = 0; j <= pattern-i; j++)  
            {  
               Console.Write(" ");  
            }  
                for (int k = 0; k <= i; k++) 
                {  
                   Console.Write("*");  
                }  
            Console.WriteLine(" ");  
         } 
    }


    static void Main(string[] args)
    {
    
      MethodPattern(16); 	// call the method with value of (8) from variable (pattern)
         
    }
  }
}
